<h1><%= @cocktail.name %></h1>

   <% if @cocktail.photo.attached? %>
   <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
   <% else %>
   <%= cl_image_tag("NuGMv9ifCf3djAn1rZYjZxxh.jpg") %>
<% end %>



<ul><% @cocktail.doses.each do |dose| %>
  <li> <%=  "#{dose.description}: #{dose.ingredient.name}"%>
      <%= link_to "X", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
</li>
  <% end %>
</ul>

<p class="btn btn-ghost">  <%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %> </p>


<p class="btn btn-ghost" ><%= link_to "Back to home", root_path%></p>
