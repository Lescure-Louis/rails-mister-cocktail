
<div id="header">
  <a href="/" id="logo">aperotime</a>
  <h4>Let the evening beGIN</h4>
  <ul id="menu">
    <li><a> <%= link_to "Add a Cocktail",  new_cocktail_path %> </a></li>
  </ul>
  <p></p>
</div>

<div class="container">
  <h1 class="mt-3">Cocktails</h1>
  <div class="row">
    <ul class="pl-0">
      <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <li>
            <div class="card-trip">
              <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
              <% else %>
              <%= cl_image_tag("NuGMv9ifCf3djAn1rZYjZxxh.jpg") %>
           <% end %>

              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
                 </div>
              </div>
            </div>
        </li>
      <% end %>
    </div>
    </ul>
  </div>
</div>






